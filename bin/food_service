#!/usr/bin/env perl

use warnings;
use strict;
use Daemon::Control;

use Cwd qw(abs_path);
use File::Basename;

my $abs_path = abs_path($0);
my $abs_dir  = dirname($0);

Daemon::Control->new({
  name      => 'My Food',
  lsb_start => '$syslog $remote_fs',
  lsb_stop  => '$syslog',
  lsb_sdesc => 'My Food',
  lsb_desc  => 'My Food',
  path      => $abs_path,

  program      => '/usr/bin/starman',
  program_args => [ '--workers', 10, '-l', ':6666',
                    "$abs_dir/bin/app.psgi" ],

  user  => 'food',
  group => 'psacln',

  pid_file    => '/var/run/food.pid',
  stderr_file => '/var/log/food/error.log',
  stdout_file => '/var/log/food/output.log',

  fork => 2,
})->run;
